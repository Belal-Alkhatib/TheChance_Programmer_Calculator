<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/primaryDark"
    android:paddingStart="@dimen/largeSpace"
    android:paddingEnd="@dimen/largeSpace"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/primaryDark"
        android:layout_weight="1"
         />

    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primaryDark"
        android:layout_gravity="top"
        android:paddingStart="@dimen/largeSpace"
        android:paddingEnd="@dimen/largeSpace"
        android:paddingBottom="@dimen/largeSpace"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            >
            <TextView
                android:id="@+id/tvFirstNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/smallSpace"
                android:text="308"
                android:textSize="@dimen/txt_sub_title"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tvOperator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/smallSpace"
                android:text="x"
                android:textSize="@dimen/txt_sub_title"
                android:textColor="@color/red" />
            <TextView
                android:id="@+id/tvSecondNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42"
                android:textSize="@dimen/txt_sub_title"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvResultNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="12,936"
            android:textSize="@dimen/txt_super_title"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/convertingTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primaryDark"
        android:gravity="center"
        android:layout_marginBottom="@dimen/smallSpace"
        android:layout_marginTop="@dimen/mediumSpace">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIN"
            style="@style/roundedButtonStyle"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OCT"
            style="@style/roundedButtonStyle" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEC"
            style="@style/roundedButtonStyle" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEX"
            style="@style/roundedButtonStyle.selectedButton"/>
    </LinearLayout>

   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FF0000"
        android:layout_marginBottom="@dimen/smallSpace" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryDark"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/circleButtonStyle.blackTextWithMargin"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="A" />
        <Button
            style="@style/circleButtonStyle.blackTextWithMargin"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:text="B"/>
        <Button
            style="@style/circleButtonStyle.blackTextWithMargin"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:text="C"/>
        <Button
            style="@style/circleButtonStyle.blackTextWithMargin"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:text="D"/>
        <Button
            style="@style/circleButtonStyle.blackTextWithMargin"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:text="E"/>
        <Button
            style="@style/circleButtonStyle.blackTextWithMargin"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:text="F"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:backgroundTint="@color/primaryLite"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-28dp">

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|top"
            android:paddingTop="@dimen/largeSpace"
            >

            <LinearLayout
                android:id="@+id/firstRow"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mediumSpace"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="AC"
                    style="@style/circleButtonStyle.blueText" />
                <Button
                    style="@style/circleButtonStyle.blackText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="7" />
                <Button
                    style="@style/circleButtonStyle.blackText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="4" />
                <Button
                    style="@style/circleButtonStyle.blackText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="1" />
                <Button
                    style="@style/circleButtonStyle.blackText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:drawableBottom="@drawable/ic_refresh"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondRow"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mediumSpace"
                android:layout_marginEnd="@dimen/mediumSpace"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="( )"
                    style="@style/circleButtonStyle.blueText"/>

                <Button
                    style="@style/circleButtonStyle.blackText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="8" />

                <Button
                    style="@style/circleButtonStyle.blackText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="5" />

                <Button
                    style="@style/circleButtonStyle.blackText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="2" />

                <Button
                    style="@style/circleButtonStyle.blackText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mediumSpace"
                android:layout_marginEnd="@dimen/mediumSpace"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="%"
                    style="@style/circleButtonStyle.blueText">
                </Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="9"
                    style="@style/circleButtonStyle.blackText">
                </Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="6"
                    style="@style/circleButtonStyle.blackText">
                </Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="3"
                    style="@style/circleButtonStyle.blackText">
                </Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="."
                    style="@style/circleButtonStyle.blackText">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mediumSpace"
                android:layout_marginEnd="@dimen/mediumSpace"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="÷"
                    android:textSize="@dimen/txt_super_title"
                    style="@style/circleButtonStyle.redText"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="×"
                    android:textSize="@dimen/txt_super_title"
                    style="@style/circleButtonStyle.redText"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="-"
                    android:textSize="@dimen/txt_super_title"
                    style="@style/circleButtonStyle.redText"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="+"
                    android:textSize="@dimen/txt_super_title"
                    style="@style/circleButtonStyle.redText" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="="
                    android:textSize="@dimen/txt_super_title"
                    style="@style/circleButtonStyle.redText" />
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>